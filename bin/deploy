#!/bin/bash -e

APP="chuck_joke"

# Always deploy new version, clean before
~/chuck_joke/bin/clean
~/chuck_joke/bin/package

# If the installation folder exists under /tmp, remove it
test -f ~/chuck_joke/tmp/${APP} && rm -r ~/chuck_joke/tmp/${APP}
cp -r ~/chuck_joke/build/install/${APP} ~/chuck_joke/tmp

# Run application once
~/chuck_joke/tmp/${APP}/bin/${APP}
